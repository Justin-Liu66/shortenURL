<!-- situation: when input URL was transformed before -->
{{#if data}}
<div class="result">
  <p>
    The input URL: <b>{{inputURL}}</b> was transformed before!!
  </p>
  <h2>
    Here is the shortened URL = <b>{{origin}}/{{shortURL}}</b>
  </h2>
</div>
{{else}}
<!-- situation: when input URL has been transformed successfully -->
{{#if randomShortURL}}
<div class="result">
  <p>
    The input URL: <b>{{inputURL}}</b> has been transformed successfully!!
  </p>
  <h2>
    Here is the shortened URL = <b>{{origin}}/{{randomShortURL}}</b>
  </h2>
</div>
<!--homepage-->
{{else}}
<form action="/shortenURL" method="post" class="" style="margin-top: 100px">
  <div class="mb-3 d-flex flex-column align-items-center">
    <input type="string" class="form-control w-25 text-center" id="initURL" name="initURL" placeholder="input URL here"
      aria-describedby="">
  </div>
  <div class="button-container d-flex justify-content-center">
    <button type="submit" class="btn btn-outline-success">Shorten</button>
  </div>

</form>
{{/if}}
{{/if}}